{
  "name": "@spfx-local-workbench/shared",
  "version": "0.0.1",
  "description": "Shared code for SPFx Local Workbench extension and Storybook addon",
  "author": {
    "name": "Chris Kent",
    "url": "https://github.com/thechriskent"
  },
  "contributors": [
    {
      "name": "Beau Cameron",
      "url": "https://github.com/bcameron1231"
    },
    {
      "name": "Hugo Bernier",
      "url": "https://github.com/hugoabernier"
    }
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run generate:css-types && tsc && npm run copy-assets",
    "generate:css-types": "tcm src",
    "copy-assets": "rsync -a --include='*/' --include='*.css' --include='*.css.d.ts' --exclude='*' src/ dist/",
    "watch": "npm-run-all -p watch:*",
    "watch:tsc": "tsc --watch",
    "watch:css-types": "tcm src --watch"
  },
  "keywords": [
    "spfx",
    "mock",
    "testing"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "npm-run-all": "^4.1.5",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.9.3"
  }
}
